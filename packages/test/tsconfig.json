{
    "compilerOptions": {
        "jsx": "react-jsx",
        "outDir": "./dist/cjs",
        "baseUrl": "src",
        "lib": ["ESNext", "dom"],
        "composite": false,
        "declaration": true,
        "esModuleInterop": true,
        "inlineSources": false,
        "isolatedModules": true,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node"
    },
    "include": ["src", "./typings"],
    "exclude": ["node_modules", "dist"]
}
